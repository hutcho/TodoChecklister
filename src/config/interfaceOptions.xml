<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">

  <Script file="interfaceOptions.lua"/>

  <Frame name="TodoChecklisterOptionsAddOnsTemplate" virtual="true" parent="UIParent">
    <Anchors>
      <Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="BOTTOMLEFT">
      </Anchor>
    </Anchors>
    <Layers>
      <Layer level="OVERLAY">
        <FontString name="$parentTitle" parentKey="Title" inherits="GameFontNormalLarge" justifyH="LEFT">
        </FontString>
      </Layer>
    </Layers>

    <Frames>
      <Frame parentKey="SettingsContainer" name="$parentSettingsContainer">
        <Anchors>
          <Anchor point="TOPLEFT" relativeTo="$parentTitle" relativePoint="BOTTOMLEFT">
          </Anchor>
          <Anchor point="BOTTOMRIGHT" relativeTo="$parent" relativePoint="BOTTOMRIGHT">
          </Anchor>
        </Anchors>

        <Frames>
          <CheckButton parentKey="FocusCheckButton" name="$parentFocusCheckButton" inherits="SettingsCheckBoxTemplate">
            <Scripts>
              <OnLoad>
                self.Text:SetText("Show the 'Keep focus' checkbox");
              </OnLoad>
              <OnClick>
                PlaySound(SOUNDKIT.IG_MAINMENU_OPTION_CHECKBOX_ON);
                ShowKeepFocusClick(self)
              </OnClick>
            </Scripts>

            <Anchors>
              <Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPLEFT">
              </Anchor>
            </Anchors>

            <Layers>
              <Layer level="OVERLAY">
                <FontString parentKey="Text" inherits="GameFontWhite" justifyH="LEFT">
                  <Anchors>
                    <Anchor point="LEFT" relativeTo="$parent" relativePoint="Right">
                    </Anchor>
                  </Anchors>
                </FontString>

              </Layer>
            </Layers>
          </CheckButton>


          <CheckButton parentKey="KeepFocusCheckButton" name="$parentKeepFocusCheckButton" inherits="SettingsCheckBoxTemplate">

            <Scripts>
              <OnLoad>
                self.Text:SetText("Keep focus");
              </OnLoad>
              <OnClick>
                PlaySound(SOUNDKIT.IG_MAINMENU_OPTION_CHECKBOX_ON);
                KeepFocusClick(self)
              </OnClick>
            </Scripts>


            <Anchors>
              <Anchor point="LEFT" relativeTo="$parentFocusCheckButton" relativePoint="LEFT">
                <Offset>
                  <AbsDimension y="-25" />
                </Offset>
              </Anchor>
            </Anchors>

            <Layers>
              <Layer level="OVERLAY">
                <FontString name="$parentText" parentKey="Text" inherits="GameFontWhite" justifyH="LEFT">
                  <Anchors>
                    <Anchor point="LEFT" relativeTo="$parent" relativePoint="RIGHT">
                    </Anchor>
                  </Anchors>
                </FontString>
              </Layer>
            </Layers>
          </CheckButton>

          <CheckButton parentKey="LinkedCounterCheckButton" name="$parentLinkedCounterCheckButton" inherits="SettingsCheckBoxTemplate">

            <Scripts>
              <OnLoad>
                self.Text:SetText("Display linked items count from bag");
              </OnLoad>
              <OnClick>
                PlaySound(SOUNDKIT.IG_MAINMENU_OPTION_CHECKBOX_ON);
                DisplayLinkedCountClick(self)
              </OnClick>
            </Scripts>

            <Anchors>
              <Anchor point="LEFT" relativeTo="$parentKeepFocusCheckButton" relativePoint="LEFT">
                <Offset>
                  <AbsDimension y="-25" />
                </Offset>
              </Anchor>
            </Anchors>

            <Layers>
              <Layer level="OVERLAY">
                <FontString name="$parentText" parentKey="Text" inherits="GameFontWhite" justifyH="LEFT">
                  <Anchors>
                    <Anchor point="LEFT" relativeTo="$parent" relativePoint="Right">
                    </Anchor>
                  </Anchors>
                </FontString>
              </Layer>
            </Layers>
          </CheckButton>

          <CheckButton parentKey="ToggleMapButton" name="$parentToggleMapButton" inherits="SettingsCheckBoxTemplate">

            <Scripts>
              <OnLoad>
                self.Text:SetText("Show minimap icon");
              </OnLoad>
              <OnClick>
                PlaySound(SOUNDKIT.IG_MAINMENU_OPTION_CHECKBOX_ON);
                ToggleMapClick(self)
              </OnClick>
            </Scripts>

            <Anchors>
              <Anchor point="LEFT" relativeTo="$parentLinkedCounterCheckButton" relativePoint="LEFT">
                <Offset>
                  <AbsDimension y="-25" />
                </Offset>
              </Anchor>
            </Anchors>

            <Layers>
              <Layer level="OVERLAY">
                <FontString name="$parentText" parentKey="Text" inherits="GameFontWhite" justifyH="LEFT">
                  <Anchors>
                    <Anchor point="LEFT" relativeTo="$parent" relativePoint="Right">
                    </Anchor>
                  </Anchors>
                </FontString>
              </Layer>
            </Layers>
          </CheckButton>

          <CheckButton parentKey="MuteChatCheckButton" name="$parentMuteChatCheckButton" inherits="SettingsCheckBoxTemplate">

            <Scripts>
              <OnLoad>
                self.Text:SetText("Hide chat messages");
              </OnLoad>
              <OnClick>
                PlaySound(SOUNDKIT.IG_MAINMENU_OPTION_CHECKBOX_ON);
                MuteChatClick(self)
              </OnClick>
            </Scripts>

            <Anchors>
              <Anchor point="LEFT" relativeTo="$parentToggleMapButton" relativePoint="LEFT">
                <Offset>
                  <AbsDimension y="-25" />
                </Offset>
              </Anchor>
            </Anchors>

            <Layers>
              <Layer level="OVERLAY">
                <FontString name="$parentText" parentKey="Text" inherits="GameFontWhite" justifyH="LEFT">
                  <Anchors>
                    <Anchor point="LEFT" relativeTo="$parent" relativePoint="Right">
                    </Anchor>
                  </Anchors>
                </FontString>
              </Layer>
            </Layers>
          </CheckButton>

          <CheckButton name="ParentFanfareCheck" parentKey="FanfareCheck" inherits="SettingsCheckBoxTemplate">

            <Scripts>
              <OnLoad>
                self.Text:SetText("Play sound when entire list is complete");
              </OnLoad>
              <OnClick>
                PlaySound(SOUNDKIT.IG_MAINMENU_OPTION_CHECKBOX_ON);
                OnFanfarreCheck(self)
              </OnClick>
            </Scripts>

            <Anchors>
              <Anchor point="LEFT" relativeTo="$parentMuteChatCheckButton" relativePoint="LEFT">
                <Offset>
                  <AbsDimension y="-25" />
                </Offset>
              </Anchor>
            </Anchors>

            <Layers>
              <Layer level="OVERLAY">
                <FontString name="$parentText" parentKey="Text" inherits="GameFontWhite" justifyH="LEFT">
                  <Anchors>
                    <Anchor point="LEFT" relativeTo="$parent" relativePoint="RIGHT">
                    </Anchor>
                  </Anchors>
                </FontString>
              </Layer>
            </Layers>
          </CheckButton>

          <CheckButton parentKey="DisplayBankOnLinked" name="$parentMuteDisplayBankOnLinked" inherits="SettingsCheckBoxTemplate">

            <Scripts>
              <OnLoad>
                self.Text:SetText("Show count from bank on linked items");
              </OnLoad>
              <OnClick>
                PlaySound(SOUNDKIT.IG_MAINMENU_OPTION_CHECKBOX_ON);
                DisplayBankClick(self)
              </OnClick>
            </Scripts>

            <Anchors>
              <Anchor point="LEFT" relativeTo="ParentFanfareCheck" relativePoint="LEFT">
                <Offset>
                  <AbsDimension y="-25" />
                </Offset>
              </Anchor>
            </Anchors>

            <Layers>
              <Layer level="OVERLAY">
                <FontString name="$parentText" parentKey="Text" inherits="GameFontWhite" justifyH="LEFT">
                  <Anchors>
                    <Anchor point="LEFT" relativeTo="$parent" relativePoint="RIGHT">
                    </Anchor>
                  </Anchors>
                </FontString>
              </Layer>
            </Layers>
          </CheckButton>

          <CheckButton parentKey="DisplayChargesOnLinked" name="$parentDisplayChargesOnLinked" inherits="SettingsCheckBoxTemplate">

            <Scripts>
              <OnLoad>
                self.Text:SetText("Show count charges on linked items");
              </OnLoad>
              <OnClick>
                PlaySound(SOUNDKIT.IG_MAINMENU_OPTION_CHECKBOX_ON);
                DisplayChargesClick(self)
              </OnClick>
            </Scripts>

            <Anchors>
              <Anchor point="LEFT" relativeTo="$parentMuteDisplayBankOnLinked" relativePoint="LEFT">
                <Offset>
                  <AbsDimension y="-25"/>
                </Offset>
              </Anchor>
            </Anchors>

            <Layers>
              <Layer level="OVERLAY">
                <FontString name="$parentText" parentKey="Text" inherits="GameFontWhite" justifyH="LEFT">
                  <Anchors>
                    <Anchor point="LEFT" relativeTo="$parent" relativePoint="Right">
                    </Anchor>
                  </Anchors>
                </FontString>
              </Layer>
            </Layers>
          </CheckButton>

          <Slider parentKey="Opacity" name="$parentOpacity" inherits="OptionsSliderTemplate" minValue="0" maxValue="1" valueStep="0.01" defaultValue="1">
            <Anchors>
              <Anchor point="TOPLEFT" relativeTo="$parentMuteDisplayBankOnLinked" relativePoint="BOTTOMLEFT">
                <Offset x="10" y="-40"/>
              </Anchor>
            </Anchors>

            <Layers>
              <Layer level="ARTWORK">
                <FontString name="$parentText" inherits="GameFontNormalSmall" text="OPACITY">
                  <Anchors>
                    <Anchor point="TOP" relativeTo="$parent">
                      <Offset>
                        <AbsDimension x="0" y="11"/>
                      </Offset>
                    </Anchor>
                  </Anchors>
                </FontString>

                <FontString parentKey="Value" name="$parentValue" inherits="GameFontHighlight">
                  <Anchors>
                    <Anchor point="BOTTOM" relativeTo="$parent">
                      <Offset>
                        <AbsDimension x="0" y="-15"/>
                      </Offset>
                    </Anchor>
                  </Anchors>
                </FontString>
              </Layer>
            </Layers>

            <Scripts>
              <OnLoad>
                self.Low:SetText("0%")
                self.High:SetText("100%")
              </OnLoad>
              <OnValueChanged>
                OpacityValueChanged(self)
                self.Value:SetText(string.format("%d%s", self:GetValue() * 100, "%"))
              </OnValueChanged>
            </Scripts>
          </Slider>

          <Slider parentKey="OpacityOnHover" name="$parentOpacityOnHover" inherits="OptionsSliderTemplate" minValue="0" maxValue="1" valueStep="0.01" defaultValue="1" hidden="true">
            <Anchors>
              <Anchor point="TOPLEFT" relativeTo="$parentDisplayChargesOnLinked" relativePoint="BOTTOMLEFT">
                <Offset x="10" y="-40"/>
              </Anchor>
            </Anchors>

            <Layers>
              <Layer level="ARTWORK">
                <FontString name="$parentText" inherits="GameFontNormalSmall" text="Opacity when hovered">
                  <Anchors>
                    <Anchor point="TOP" relativeTo="$parent">
                      <Offset>
                        <AbsDimension x="0" y="11"/>
                      </Offset>
                    </Anchor>
                  </Anchors>
                </FontString>

                <FontString parentKey="Value" name="$parentValue" inherits="GameFontHighlight">
                  <Anchors>
                    <Anchor point="BOTTOM" relativeTo="$parent">
                      <Offset>
                        <AbsDimension x="0" y="-15"/>
                      </Offset>
                    </Anchor>
                  </Anchors>
                </FontString>
              </Layer>
            </Layers>

            <Scripts>
              <OnLoad>
                self.Low:SetText("0%")
                self.High:SetText("100%")
              </OnLoad>
              <OnValueChanged>
                OpacityOnHoverValueChanged(self)
                self.Value:SetText(string.format("%d%s", self:GetValue() * 100, "%"))
              </OnValueChanged>
            </Scripts>
          </Slider>

          <!-- Footer github url -->
          <Button parentKey="Obs" name="$parentObs" hidden="false">
            <Size x="300" y="15"/>

            <Anchors>
              <Anchor point="BOTTOMRIGHT" relativeTo="$parent" relativePoint="BOTTOMRIGHT">
              </Anchor>
              <Anchor point="LEFT">
              </Anchor>
            </Anchors>
            <Layers>
              <Layer level="OVERLAY">
                <FontString name="$parentText" parentKey="Text" inherits="GameFontHighlight" justifyH="RIGHT" justifyV="BOTTOM">
                  <Anchors>
                    <Anchor point="BOTTOMRIGHT" relativeTo="$parent" relativePoint="BOTTOMRIGHT">
                    </Anchor>
                  </Anchors>
                </FontString>
              </Layer>
            </Layers>

            <Scripts>
              <OnEnter>
                self.Text:SetFontObject(GameFontNormal)
              </OnEnter>
              <OnLeave>
                self.Text:SetFontObject(GameFontHighlight)
              </OnLeave>
            </Scripts>
          </Button>
        </Frames>
      </Frame>
    </Frames>
  </Frame>
</Ui>
